<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:padding="16dp"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textViewProfileHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/profile_container_bg"
        android:textColor="@color/purple_700"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <RelativeLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewProfileHeader"
        android:padding="16dp"
        android:background="@drawable/profile_container_bg"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textViewNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewNameLabel"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignBaseline="@id/textViewNameLabel" />

        <TextView
            android:id="@+id/textViewEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:layout_below="@id/textViewNameLabel"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewNameLabel"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textViewEmailLabel"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignBaseline="@id/textViewEmailLabel" />

        <TextView
            android:id="@+id/textViewNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number:"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:textSize="16sp"
            android:layout_below="@id/textViewEmailLabel"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/mobileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTextView"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textViewNumberLabel"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_alignBaseline="@id/textViewNumberLabel" />

    </RelativeLayout>
</RelativeLayout>
